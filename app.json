{
  "name": "Unsplash Chat Bot",
  "description": "An Unsplash Bot for Zoom Chat",
  "repository": "https://github.com/tommygaessler/unsplash-chat-bot",
  "logo": "https://unsplash.com/assets/core/logo-black-df2168ed0c378fa5506b1816e75eb379d06cfcd0af01e07a2eb813ae9b5d7405.svg",
  "keywords": ["node", "express", "unsplash", "zoom"],
  "addons": [
    "heroku-postgresql"
  ],
  "env": {
    "unsplash_client_id": {
      "description": "Your Unsplash client_id",
      "value": "",
      "required": true
    },
    "zoom_client_id": {
      "description": "Your Zoom client_id",
      "value": "",
      "required": true
    },
    "zoom_client_secret": {
      "description": "Your Zoom client_secret",
      "value": "",
      "required": true
    },
    "zoom_robot_jid": {
      "description": "Your Zoom robot_jid",
      "value": "",
      "required": true
    },
    "zoom_verification_code": {
      "description": "Your Zoom domain verification code (optional)",
      "value": "",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "heroku pg:psql && CREATE TABLE access_token (access_token TEXT,  expires_on NUMERIC); && INSERT INTO access_token (access_token, expires_on)  VALUES ('', '0');"
  }
}
